<?xml version="1.0" encoding="UTF-8"?>

<configuration status="error">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z}|%-5level|%class{36}.%M|%L|%msg%xEx%n"/>
        </Console>

        <File name="INFO" fileName="/var/log/bhzx/hypt/batchUtil/info.log" append="false">
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z}|%-5level|%class{36}.%M|%L|%msg%xEx%n"/>
        </File>

        <File name="WARN" fileName="/var/log/bhzx/hypt/batchUtil/warn.log">
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z}|%-5level|%class{36}.%M|%L|%msg%xEx%n"/>
        </File>
        <File name="ERROR" fileName="/var/log/bhzx/hypt/batchUtil/error.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z}|%-5level|%class{36}.%M|%L|%msg%xEx%n"/>
        </File>

        <RollingFile name="RollingFile" fileName="/var/log/bhzx/hypt/batchUtil/rolling.log"
                     filePattern="$${date:yyyy-MM}/web-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy.MM.dd 'at' HH:mm:ss z}|%-5level|%class{36}.%M|%L| %msg%xEx%n"/>
            <SizeBasedTriggeringPolicy size="10MB"/>
        </RollingFile>
    </appenders>

    <loggers>
        <root level="info">
            <appender-ref ref="RollingFile"/>
            <appender-ref ref="Console"/>
            <appender-ref ref="ERROR" />
            <appender-ref ref="WARN" />
            <appender-ref ref="INFO"/>
        </root>
    </loggers>
</configuration>